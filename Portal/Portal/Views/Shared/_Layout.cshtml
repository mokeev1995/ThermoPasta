<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimal-ui, minimum-scale=1.0, maximum-scale=1.0, user-scalable=yes">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/ajax")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/global")

</head>
<body style="background-color: transparent">
<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
            </button>
            <div class="btn-group navbar-brand">
                <button type="button" class="btn btn-default navbar-btn" id="backLink">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    &nbsp;Back
                </button>
            </div>

            @*@Html.ActionLink("Portal", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@

        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Devices", "Index", "Device")</li>
                <li>@Html.ActionLink("Profiles", "Index", "Profile")</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()
    @*<hr />
            <footer>
                <p>&copy; @DateTime.Now.ToLongDateString() - Portal for CS</p>
            </footer>*@
</div>
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", false)
</body>
</html>