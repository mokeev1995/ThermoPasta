@model Portal.Models.ViewModels.DeviceView

@{
    ViewBag.Title = "Delete";
}

<div class="panel panel-danger">
	<div class="panel-heading">
		<h3 class="panel-title"><h3>Are you sure you want to delete this?</h3></h3>
	</div>
	<div class="panel-body">
		<div>
			<dl class="dl-horizontal">
				<dt>
					@Html.DisplayNameFor(model => model.Title)
				</dt>

				<dd>
					@Html.DisplayFor(model => model.Title)
				</dd>

				<dt>
					@Html.DisplayNameFor(model => model.Profile)
				</dt>

				<dd>
					@Html.DisplayFor(model => model.Profile)
				</dd>

			</dl>
		</div>
	</div>
	<div class="panel-footer">
		@using (Html.BeginForm())
			{
			@Html.AntiForgeryToken()

			<div class="form-actions no-color">
				<a href="@Url.Action("Index")" class="btn btn-default">&lt; Back</a>
				<input type="submit" value="Delete" class="btn btn-danger" />
			</div>
			}
	</div>
</div>